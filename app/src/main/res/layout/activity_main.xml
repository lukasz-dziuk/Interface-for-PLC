<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context="com.example.lukasz.aninterface.MainActivity">



    <ImageButton
        android:id="@+id/imageView0"
        style="@style/diody"
        android:scaleType="centerInside"
        android:padding="0dp"
        android:layout_above="@+id/imageView4"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="38dp" />

    <ImageButton
        android:id="@+id/imageView1"
        style="@style/diody"
        android:scaleType="centerInside"
        android:padding="0dp"
        android:layout_alignTop="@+id/imageView0"
        android:layout_toEndOf="@+id/imageView0" />

    <ImageButton
        android:id="@+id/imageView2"
        style="@style/diody"
        android:scaleType="centerInside"
        android:padding="0dp"
        android:layout_alignTop="@+id/imageView1"
        android:layout_toEndOf="@+id/imageView1" />

    <ImageButton
        android:id="@+id/imageView3"
        style="@style/diody"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imageView2"
        android:padding="0dp"
        android:scaleType="fitCenter" />

    <ImageButton
        android:id="@+id/imageView4"
        style="@style/diody"
        android:scaleType="centerInside"
        android:padding="0dp"
        android:layout_marginBottom="17dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/imageView5"
        style="@style/diody"
        android:scaleType="centerInside"
        android:padding="0dp"
        android:layout_alignTop="@+id/imageView4"
        android:layout_toEndOf="@+id/imageView4" />

    <ImageButton
        android:id="@+id/imageView6"
        style="@style/diody"
        android:scaleType="centerInside"
        android:padding="0dp"
        android:layout_alignTop="@+id/imageView5"
        android:layout_toEndOf="@+id/imageView5" />

    <ImageButton
        android:id="@+id/imageView7"
        style="@style/diody"
        android:scaleType="centerInside"
        android:padding="0dp"
        android:layout_alignTop="@+id/imageView6"
        android:layout_toEndOf="@+id/imageView6" />

    <TextView
        android:id="@+id/textView0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView0"
        android:layout_marginEnd="38dp"
        android:layout_toStartOf="@+id/imageView1"
        android:text="0"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView1"
        android:layout_marginEnd="39dp"
        android:layout_toStartOf="@+id/imageView2"
        android:text="1"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView2"
        android:layout_marginEnd="39dp"
        android:layout_toStartOf="@+id/imageView3"
        android:text="2"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView3"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="38dp"
        android:text="3"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView4"
        android:layout_alignStart="@+id/textView0"
        android:text="4"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView5"
        android:layout_alignStart="@+id/textView1"
        android:text="5"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView6"
        android:layout_alignStart="@+id/textView2"
        android:text="6"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView7"
        android:layout_alignStart="@+id/textView3"
        android:text="7"
        android:textColor="@android:color/black"
        android:textSize="18sp" />


    <Button
        android:id="@+id/button1"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:onClick="polacz"
        android:text="Połącz" />

    <Button
        android:id="@+id/button2"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_alignStart="@+id/button1"
        android:layout_below="@+id/button1"
        android:layout_marginTop="13dp"
        android:onClick="ustawienia"
        android:text="ustawienia" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button1"
        android:layout_alignBottom="@+id/button1"
        android:layout_alignEnd="@+id/textView3"
        android:text="Połączono"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Podgląd nieaktywny"
        android:textColor="@android:color/holo_red_dark"
        android:layout_above="@+id/textView1"
        android:layout_toEndOf="@+id/lista"
        android:layout_marginBottom="9dp" />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/lvNewDevices"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button2"
        android:layout_above="@+id/textView9" />

    <TextView
        android:id="@+id/bluetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button1"
        android:layout_alignBottom="@+id/button1"
        android:layout_toStartOf="@+id/imageView1"
        android:text="Bluetooth \n włączony"
        android:textColor="@android:color/holo_red_dark" />

    <TextView
        android:id="@+id/lista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wczytywanie listy..."
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="12sp"
        android:layout_above="@+id/lvNewDevices"
        android:layout_toStartOf="@+id/button2"
        android:layout_marginEnd="7dp" />

</RelativeLayout>
